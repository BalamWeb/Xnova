{% extends "CoreBundle::layout.html.twig" %}
{% block title %}
	{{ parent() }} - {% trans %}enregistrement.register{% endtrans %}
{% endblock %}
{% block content %}
		<div class="account-pages"></div>
        <div class="clearfix"></div>
        <div class="wrapper-page">
            <div class="text-center">
                <a href="{{ path("login") }}" class="logo"><span>Login <span>{% trans %}site.titre{% endtrans %}</span></span></a>
                <h5 class="text-muted m-t-0 font-600">{% trans %}site.sous_titre{% endtrans %}</h5>
            </div>
			<div class="m-t-40 card-box">
				<div class="text-center">
					<h4 class="text-uppercase font-bold m-b-0">{% trans %}enregistrement.register{% endtrans %}</h4>
				</div>
				<div class="panel-body">
					{{ form_start(form, {'attr': {'class': 'form-horizontal m-t-20', 'id': 'register','enctype':"multipart/form-data",'data-toggle':"validator",'role':"form"}}) }}
						<div class="form-group ">
							<div class="col-xs-12">
								{{ form_widget(form.email, {'attr': {'class': 'form-control register'} }) }}
							</div>
						</div>
						<div class="form-group ">
							<div class="col-xs-12">
								{{ form_widget(form.username, {'attr': {'class': 'form-control register'} }) }}
							</div>
						</div>
						<div class="form-group">
							<div class="col-xs-12">
								{{ form_widget(form.password.first, {'attr': {'class': 'form-control register'} }) }}
							</div>
						</div>
						<div class="form-group">
							<div class="col-xs-12">
								{{ form_widget(form.password.second, {'attr': {'class': 'form-control register'} }) }}
							</div>
						</div>
						<div class="form-group">
							<div class="col-xs-12">
								<div class="checkbox checkbox-custom">
									<input id="checkbox-signup" name="checkbox-signup" type="checkbox" required>
									<label for="checkbox-signup">{% trans %}enregistrement.accepte{% endtrans %} <a href="#">{% trans %}enregistrement.cgu{% endtrans %}</a></label>
								</div>
							</div>
						</div>
						<div class="form-group text-center m-t-40">
							<div class="col-xs-12">
								<button class="btn btn-custom btn-bordred btn-block waves-effect waves-light" type="submit" id="valider">
									{% trans %}enregistrement.register{% endtrans %}
								</button>
							</div>
						</div>
					{{ form_end(form) }}
				</div>
			</div>
			<div class="row">
				<div class="col-sm-12 text-center">
					<p class="text-muted">{% trans %}enregistrement.has_account{% endtrans %}<a href="{{ path("login") }}" class="text-primary m-l-5"><b>{% trans %}enregistrement.signin{% endtrans %}</b></a></p>
				</div>
			</div>
		</div>
{% endblock %}
{% block appendJS %}
    {% javascripts
    "@CoreBundle/Resources/public/plugins/jquery-validation/dist/jquery.validate.min.js"
    "@CoreBundle/Resources/public/plugins/jquery-validation/dist/additional-methods.js"
    "@CoreBundle/Resources/public/plugins/jquery-validation/src/localization/messages_fr.js"
    "@CoreBundle/Resources/public/js/login/register.validator.js"
    %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}